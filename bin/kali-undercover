#!/bin/sh

DIR=~/.local/share/kali-undercover/
SHARE_DIR=/usr/share/kali-undercover/
CONF_FILES=$SHARE_DIR/config/
XFCE4_PANEL_PROFILES=$SHARE_DIR/scripts/xfce4-desktop-profiles.py
KALI_UNDERCOVER_PANEL_PROFILE=$SHARE_DIR/kali-undercover-panel-profile.tar.bz
USER_PANEL_PROFILE=$DIR/user-panel-profile.tar.bz

mkdir -p $DIR

# Hide existing notifications
killall xfce4-notifyd

set_xconf_settings() {
	xfconf-query -c xsettings -p /Net/ThemeName -s "$GTK_THEME"
	xfconf-query -c xfwm4 -p /general/theme -s "$WM_THEME"
	xfconf-query -c xsettings -p /Net/IconThemeName -s "$ICON_THEME"
	xfconf-query -c xsettings -p /Gtk/CursorThemeName -s "$CURSOR_THEME"
	xfconf-query -c xsettings -p /Gtk/FontName -s "$FONT"
}

enable_undercover() {
	cat <<-EOF > $DIR/lock
		GTK_THEME="$(xfconf-query -c xsettings -p /Net/ThemeName)"
		WM_THEME="$(xfconf-query -c xfwm4 -p /general/theme)"
		ICON_THEME="$(xfconf-query -c xsettings -p /Net/IconThemeName)"
		CURSOR_THEME="$(xfconf-query -c xsettings -p /Gtk/CursorThemeName)"
		FONT="$(xfconf-query -c xsettings -p /Gtk/FontName)"
	EOF
	GTK_THEME='Windows-10'
	WM_THEME='Windows-10'
	ICON_THEME='Windows-10-Icons'
	CURSOR_THEME='Windows-10-Icons'
	FONT='Liberation Sans 11'
	set_xconf_settings
	$XFCE4_PANEL_PROFILES save $USER_PANEL_PROFILE
	$XFCE4_PANEL_PROFILES load $KALI_UNDERCOVER_PANEL_PROFILE
	(cd $CONF_FILES; \
	find -type f -exec mv ~/.config/{} ~/.config/{}.undercover \;)
	cp -r $CONF_FILES/* ~/.config/
}

disable_undercover() {
	. $DIR/lock
	set_xconf_settings
	$XFCE4_PANEL_PROFILES load $USER_PANEL_PROFILE
	(cd $CONF_FILES; \
	find -type f -exec rm ~/.config/{} \;)
	find ~/.config -name '*.undercover' -exec sh -c 'mv {} $(echo {} | sed 's/.undercover//')' \;
	rm $DIR/lock
}

if [ -f $DIR/lock ]; then
	disable_undercover
	sleep 1
	notify-send -i dialog-information 'Desktop setting restored'
else
	enable_undercover
	sleep 1
	notify-send -i xfce4-settings 'Updates are available' 'Select this message to install'
fi

